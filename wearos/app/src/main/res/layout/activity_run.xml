<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RunActivity"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/txt_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:scrollbars="vertical"
        android:text="RUN" />

    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/run_hour"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="00" />

        <TextView
            android:id="@+id/run_colon1"
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text=":" />

        <TextView
            android:id="@+id/run_minute"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="00" />

        <TextView
            android:id="@+id/run_colon2"
            android:layout_width="17dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text=":" />

        <TextView
            android:id="@+id/run_second"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="00" />
    </LinearLayout>

    <TextView
        android:id="@+id/run_distance"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:textAlignment="center"
        android:text="이동거리:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/run_speed"
        android:layout_width="159dp"
        android:layout_height="33dp"
        android:text="현재 속력:"
        android:textAlignment="center"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/run_heartRate"
        android:layout_width="159dp"
        android:layout_height="33dp"
        android:text="심박수:"
        android:textAlignment="center"
        android:textColor="#000000" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_run_start"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="달리기 시작" />

        <Button
            android:id="@+id/button_run_end"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:text="달리기 끝" />

    </LinearLayout>


</LinearLayout>