<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HeartrateActivity"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/txt_heartrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="HEART RATE"
        android:textColor="#16537e"
        android:textFontWeight="@integer/google_play_services_version" />

<!--    <Button-->
<!--        android:id="@+id/btn_start"-->
<!--        android:layout_width="79dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="START" />-->

<!--    <Button-->
<!--        android:id="@+id/btn_end"-->
<!--        android:layout_width="77dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="END" />-->
    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/run_hour"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="00" />

        <TextView
            android:id="@+id/run_colon1"
            android:layout_width="19dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text=":" />

        <TextView
            android:id="@+id/run_minute"
            android:layout_width="51dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="00" />

        <TextView
            android:id="@+id/run_colon2"
            android:layout_width="17dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text=":" />

        <TextView
            android:id="@+id/run_second"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:text="00" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="15dp"
        android:background="#FFFFFF"
        android:gravity="center">
        <TextView
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:textSize="8dp"
            android:text="현재"
            android:textAlignment="center"
            android:textColor="#000000" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:textSize="8dp"
            android:text="목표"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/now_heartrate"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="0rpm"
            android:textAlignment="center"
            android:textFontWeight="@integer/google_play_services_version"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/goal_minute"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="분"
            android:textAlignment="center"
            android:textFontWeight="@integer/google_play_services_version"
            android:textColor="#2986cc" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:src="@drawable/play_button"
        />
</LinearLayout>