<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CheckActivity"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/title_run"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="CHECK"
        android:textColor="#16537e"
        android:textFontWeight="@integer/google_play_services_version" />

    <TextView
        android:id="@+id/title_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="title"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/status_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#090909" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_check_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크하기!" />

        <Button
            android:id="@+id/btn_check_end"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="취소!" />
    </LinearLayout>

</LinearLayout>